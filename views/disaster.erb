<h2> <%= @user.name %>, you are trying to survive the <%= @disaster.name %> event.</h2>

<h3> Day <%= @counter %> </h3>

<% if @user.alive == false %>
  <h2>You died on day <%= @counter %> </h2>
<% end %>

<% if @user.alive %>
  <label for="new_user">Play out a day:</label>
  <form name="new_user" action="/users/<%=@user.id%>/disasters/<%=@disaster.id%>/<%=@counter%>" method="post">
    <button class="btn btn-primary btn-lg" type="submit">Go!</button>
  </form>
<% end %>

<% if @message_arry %>
  <ul class="list-group">
  <% @message_arry.each do |message| %>
    <li class="list-group-item"><%= message %></li>
  <% end %>
  </ul>
<% end %>

<hr>

<div class="row">
  <div class="col-xs-3">
    <ul class="list-group">
      <li class="list-group-item">Food Count: <%= @user.food_count %></li>
      <li class="list-group-item">Water Count: <%= @user.water_count %></li>
      <li class="list-group-item">Medicine Count: <%= @user.medicine_count %></li>
      <li class="list-group-item">Protection Count: <%= @user.protection_count %></li>
    </ul>
  </div>
  <div class="col-xs-5">
    <% if @special_items.length != 0 %>
      <ul class="list-group">
        <% @special_items.each do |item| %>
          <li class="list-group-item"><%= item.name %></li>
        <% end %>
      </ul>
    <% else %>
      <h4>WARNING: You did not purchase any special items to help you survive the <%= @disaster.name %> event.</h4>
    <% end %>
  </div>
</div>

<hr>

<a class = "btn btn-primary" href="/users/<%=@user.id%>">Back to Store</a>
